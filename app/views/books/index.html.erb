<h1>Books</h1>
<table>
<thead>
<tr>
 <th><h4>Title</h4></th>
 <th><h4>Body</h4></th>
</tr>
</thead>

<% @books.each do |book| %>
<tbody>
<tr>
   <td>
      <%= book.title  %>
   </td>
   <td>
      <%= book.body %>
   </td>
   <td>
      <%= link_to 'Show',book_path(book.id) %>
   </td>
   <td>
      <%= link_to 'Edit',edit_book_path(book.id) %>
   </td>
   <td>
      <%= link_to "Destroy",book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %>
   </td>
</tr>
</tbody>
<% end %>
</table>